{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "labels": [
        "maintenance"
    ],
    "reviewers": [
        "croct-tech/js"
    ],
    "automerge": true,
    "platformAutomerge": true,
    "masterIssue": true,
    "rangeStrategy": "update-lockfile",
    "automergeStrategy": "squash",
    "automergeType": "pr",
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "schedule": ["before 5am on monday"]
    },
    "packageRules": [
        {
            "matchManagers": [
                "npm"
            ],
            "matchPackagePrefixes": [
                "@croct/"
            ],
            "schedule": [
                "at any time"
            ],
            "groupName": "Croct packages"
        },
        {
            "matchPackagePatterns": [
                "eslint"
            ],
            "groupName": "eslint"
        },
        {
            "matchPackagePatterns": [
                "relay"
            ],
            "groupName": "relay"
        },
        {
            "matchPackagePrefixes": [
                "actions/"
            ],
            "groupName": "GH actions",
            "automerge": true
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchCurrentVersion": "!/^0/",
            "automerge": true
        }
    ],
    "schedule": [
        "before 4am every weekday"
    ],
    "prHourlyLimit": 0
}
